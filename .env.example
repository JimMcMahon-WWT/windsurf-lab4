# ==============================================
# E-Commerce Monorepo Environment Variables
# ==============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control

# Node Environment
NODE_ENV=development

# Service Ports
USER_SERVICE_PORT=3001
PRODUCT_SERVICE_PORT=3002
CART_SERVICE_PORT=3003
ORDER_SERVICE_PORT=3004
PAYMENT_SERVICE_PORT=3005
INVENTORY_SERVICE_PORT=3006
NOTIFICATION_SERVICE_PORT=3007
SEARCH_SERVICE_PORT=3008

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DB_POOL_MIN=2
DB_POOL_MAX=10

# Individual Service Databases
USER_DB_NAME=user_db
PRODUCT_DB_NAME=product_db
ORDER_DB_NAME=order_db
PAYMENT_DB_NAME=payment_db
INVENTORY_DB_NAME=inventory_db
NOTIFICATION_DB_NAME=notification_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ecommerce
KAFKA_GROUP_ID=ecommerce-group

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_change_in_production_min_32_chars
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=30d
BCRYPT_ROUNDS=12

# External Payment Services
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourcompany.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:5174
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# API Gateway
API_GATEWAY_PORT=8000
API_RATE_LIMIT=100

# Frontend URLs
CUSTOMER_WEB_URL=http://localhost:5173
ADMIN_DASHBOARD_URL=http://localhost:5174

# Monitoring & Observability
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Cloud Provider (AWS/GCP/Azure)
CLOUD_PROVIDER=aws
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# File Storage
S3_BUCKET_NAME=ecommerce-uploads
CDN_URL=https://cdn.yourcompany.com

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_SEARCH=true
ENABLE_ANALYTICS=true

# Development Tools
ENABLE_SWAGGER=true
ENABLE_DEBUG_LOGS=true
